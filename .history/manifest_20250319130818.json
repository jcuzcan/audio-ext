{
  "name": "Audio Recorder",
  "description": "Records a tab's audio.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "background"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icons/record-icon.png",
    "default_title": "Recorder",
    "default_popup": "popup/main.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["audio-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
