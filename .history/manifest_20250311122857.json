{
  "manifest_version": 2,
  "name": "Tab Audio Recorder",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
   "default_icon": "icons/record-icon.png",
    "default_title": "Recorder",
    "default_popup": "popup/main.html"
  }
}
