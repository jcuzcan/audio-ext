{
  "name": "Audio Recorder",
  "description": "Records a tab's audio.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icons/record-icon.png",
    "default_title": "Recorder",
    "default_popup": "popup/main.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
